<div class="modal fade" id="updateModal-{{ category.id }}" tabindex="-1" role="dialog"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateCategoryLabel">Modifier la catégorie?</h5>
                <button type="button" class="btn btn-danger" data-dismiss="modal">&times</button>
            </div>
            <div class="modal-body">
                <p>Nom actuel de la catégorie: {{ category.name }}</p>
            </div>
            {{ form_start(category.formUpdate) }}
            <div class="modal-body">
                {{ form_row(category.formUpdate.name,{'label': 'Nouveau nom de la catégorie'}) }}
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-primary" value="Enregistrer">
            </div>
            {{ form_end(category.formUpdate) }}
        </div>
    </div>
</div>