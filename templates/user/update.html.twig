{% extends 'base.html.twig' %}


{% block title %} Modifier mon profil{% endblock %}
{% block body %}
<div class="container">
    <a class="offset-2 col-8 "></a>

    <h1 class="update_user">Modifier mon profil</h1>
    <div class="offset-2 col-8 form_login">
        {{ form_start(form
            , {'attr': {'id' : 'formUser'}}) }}

        {{ form_row(form.username, {'label':"Nom d'utilisateur",'attr':{'value':app.user.username}}) }}
        {{ form_row(form.email, {'label':"Email d'utilisateur",'attr':{'value':app.user.email}}) }}
        {{ form_row(form.password_old, {'label' : 'Ancien mot de passe'}) }}
        {{ form_row(form.password_new, {'label' : 'Nouveau mot de passe'}) }}

        <button id="submitFormsButton"
                class="btn btn-outline-success offset-xs-3 col-xs-6 offset-sm-4 col-sm-4 text-center">Cr√©er/modifier
            l'utilisateur
        </button>

        {{ form_end(form) }}

    </div>
</div>
{% endblock %}


