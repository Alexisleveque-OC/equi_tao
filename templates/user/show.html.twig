{% extends 'base.html.twig' %}

{% block title %} {{ user.username }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="card border-primary col-4">
                <h4 class="card-header text-center">Photo de profil</h4>
                <div class="card-body">
                    <div class="text-center"><img src="https://picsum.photos/300/300" alt="Image de profil" ></div>
                    <p class="card-text">image !</p>
                </div>
            </div>
            <div class="card border-primary offset-1 col-7">
                <h4 class="card-header">Nom d'utilisateur : {{ user.username }}</h4>
                <div class="card-body">
                    <h4 class="card-title">Mon profil</h4>
                    <p class="card-text">Mon email : {{ user.email }}</p>
                    <ul class="row">
                        <li class="col-4">Mes derniers commentaire</li>
                        <li class="col-4">Mes derniers commentaire</li>
                        <li class="col-4">Mes derniers commentaire</li>
                    </ul>
                    {% if app.user == user %}
                        <a class="btn btn-primary" href="{{ path('app_update_user',{'user_id' : user.id}) }}">Modifier mon profil</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
